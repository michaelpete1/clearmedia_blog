{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["dom", "esnext"],
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "types": ["d3"],
    "jsx": "preserve",
    "preserveConstEnums": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "outDir": "./dist",  // Ensure the compiled files go to a separate folder
    "declaration": true   // Optionally add for type declarations
  },
  "include": [
    "src/**/*",
    "src/shims-vue.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.vue"  // Exclude Vue files from being treated as TypeScript
  ]
}
